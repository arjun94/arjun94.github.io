<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>    
    <session-factory>        
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/ecchat</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.dbcp.maxActive">20</property>
        <property name="hibernate.dbcp.maxIdle">2</property>
        <property name="hibernate.dbcp.maxWait">60000</property>
        <property name="hibernate.dbcp.whenExhaustedAction">1</property>                
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        
       
        <mapping resource="conf/friendrequest.hbm.xml"/>
        <mapping resource="conf/userlocation.hbm.xml"/>
        <mapping resource="conf/user.hbm.xml"/>
         <mapping resource="conf/feedback.hbm.xml"/>
        <!-- <mapping resource="conf/locationdata.hbm.xml"/> -->
        <!-- <mapping resource="conf/locationindex.hbm.xml"/> -->
	</session-factory>    
</hibernate-configuration>
